- var pageTitle = page.title || config.title || ''

doctype html
html(lang=config.language)
  head
    include ./_partials/head/head.pug

    if is_home() || is_current('technology') || is_current('monetization') || is_current('thinking')
      link(rel='stylesheet', href="/css/bootstrap.min.css")
      link(rel='stylesheet', href="/css/bootstrap-theme.min.css")
      link(rel='stylesheet', href="/css/home.css")
    else
      link(rel='stylesheet', href="/css/post.css")
      link(rel='stylesheet', href="/css/header.css")
    link(rel="icon", href=config.root + 'img/favicon.png')

  body 　　
    nav.navbar.navbar-default.navbar-fixed-top(style={opacity:".9"}, role="navigation")
      div.container-fluid
        div.navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/", "_blank")= config.subtitle
        div.navbar-collapse.collapse#bs-example-navbar-collapse-1(style={height:"1px"})
          ul.nav.navbar-nav.navbar-right
            each url, label in theme.menu
              //- li(class=(url == '/tags' ? 'active' : ''))
              li()
                a(href=url, target=theme.header.blank ? "_blank" : "_self")= label

    if body
      div!= body
    else
      block content
    script(src="/js/jquery.min.js")
    script(src="/js/main.js")
    script(src="/js/bootstrap.min.js")

    include ./_third-party/math/index.pug
